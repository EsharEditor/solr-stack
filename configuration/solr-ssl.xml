<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
  <property>
    <name>solr.ssl.key.store</name>
    <value>etc/solr-ssl.keystore.jks</value>
    <description>SSL key store
    </description>
  </property>

  <property>
    <name>solr.ssl.key.store.password</name>
    <value>secret</value>
    <description>SSL key store password
    </description>
  </property>

  <property>
    <name>solr.ssl.trust.store</name>
    <value>etc/solr-ssl.keystore.jks</value>
    <description>SSL trust store
    </description>
  </property>

  <property>
    <name>solr.ssl.trust.store.password</name>
    <value>secret</value>
    <description>SSL trust store password
    </description>
  </property>

  <property>
    <name>solr.ssl.need.client.auth</name>
    <value>false</value>
    <description>Need client authentication
    </description>
  </property>

  <property>
    <name>solr.ssl.want.client.auth</name>
    <value>false</value>
    <description>Want client authentication
    </description>
  </property>
</configuration>